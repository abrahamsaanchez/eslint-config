{
    "name": "@abrahamsaanchez/eslint-config",
    "type": "module",
    "version": "2.0.3",
    "description": "Abraham's ESLint config",
    "author": "Abraham SÃ¡nchez <abrahamsaanchez@gmail.com> (https://github.com/abrahamsaanchez/)",
    "license": "MIT",
    "homepage": "https://github.com/abrahamsaanchez/eslint-config",
    "keywords": [
        "eslint-config"
    ],
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.cjs"
        }
    },
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsup src/index.ts --format esm,cjs --clean --dts",
        "commit": "git-cz",
        "commit:amend": "git add . && git commit --amend --no-edit",
        "dev": "tsup src/index.ts --format esm,cjs --watch & eslint-flat-config-viewer",
        "lint": "bun run typecheck && bun run stub && eslint .",
        "lint:fix": "bun run stub && eslint --fix .",
        "prepack": "nr build",
        "prepare": "simple-git-hooks",
        "release": "bumpp --commit \"chore: Release v%s.\" && bun publish",
        "stub": "tsup src/index.ts --format esm",
        "typecheck": "tsc --noEmit"
    },
    "config": {
        "commitizen": {
            "path": "@commitlint/cz-commitlint"
        }
    },
    "dependencies": {
        "@angular-eslint/template-parser": "20.3.0",
        "@antfu/eslint-define-config": "1.23.0-2",
        "@stylistic/eslint-plugin": "5.4.0",
        "@typescript-eslint/eslint-plugin": "8.44.0",
        "@typescript-eslint/parser": "8.44.0",
        "eslint-config-flat-gitignore": "2.1.0",
        "eslint-config-prettier": "10.1.8",
        "eslint-import-resolver-typescript": "4.4.4",
        "eslint-plugin-antfu": "3.1.1",
        "eslint-plugin-eslint-comments": "3.2.0",
        "eslint-plugin-import-x": "4.16.1",
        "eslint-plugin-jest": "29.0.1",
        "eslint-plugin-jsdoc": "60.0.0",
        "eslint-plugin-jsonc": "2.20.1",
        "eslint-plugin-markdown": "5.1.0",
        "eslint-plugin-n": "17.23.1",
        "eslint-plugin-no-only-tests": "3.3.0",
        "eslint-plugin-perfectionist": "4.15.0",
        "eslint-plugin-prettier": "5.5.4",
        "eslint-plugin-tailwindcss": "4.0.0-beta.0",
        "eslint-plugin-unicorn": "61.0.2",
        "eslint-plugin-unused-imports": "4.2.0",
        "eslint-plugin-yml": "1.18.0",
        "globals": "16.4.0",
        "jsonc-eslint-parser": "2.4.1",
        "local-pkg": "1.1.2",
        "yaml-eslint-parser": "1.3.0"
    },
    "devDependencies": {
        "@antfu/eslint-config": "5.4.1",
        "@antfu/ni": "26.0.1",
        "@commitlint/cli": "19.8.1",
        "@commitlint/cz-commitlint": "19.8.1",
        "@stylistic/eslint-plugin-migrate": "4.4.1",
        "@types/eslint": "9.6.1",
        "@types/fs-extra": "11.0.4",
        "@types/jest": "30.0.0",
        "@types/node": "24.5.2",
        "bumpp": "10.2.3",
        "eslint": "9.36.0",
        "eslint-flat-config-viewer": "0.1.20",
        "esno": "4.8.0",
        "fast-glob": "3.3.3",
        "fs-extra": "11.3.2",
        "jest": "30.1.3",
        "rimraf": "6.0.1",
        "simple-git-hooks": "2.13.1",
        "sucrase": "3.35.0",
        "tsup": "8.5.0",
        "typescript": "5.9.2",
        "unbuild": "3.6.1"
    },
    "peerDependencies": {
        "eslint": ">=9.10.0"
    },
    "simple-git-hooks": {
        "commit-msg": "bun commitlint --edit ${1}",
        "pre-commit": "bun typecheck && bun lint:fix"
    }
}
